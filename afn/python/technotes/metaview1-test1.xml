
	<!--
		This file is a mockup of the current TrayTimer interface. It's written
		against the current interface provided by the timer server. Assuming
		some means of instructing a viewer to load an xml document and run it
		against a specific Autobus server, this xml file by itself would be
		sufficient to view, edit, etc the timers on a timer server and
		generally provide the same functionality as the java TrayTimer does.

		<subtract> <ifvalue value="timer.state" if1="1" then1="startup"
		if2="2" then2="timer.time" if3="3" then3="timer.time" /> <ifvalue
		value="timer.state" if1="1" then1="timer.time" if2="2" then2="startup"
		if3="3" then3="0" /> </subtract>
	-->
<metaview xmlns="http://www.opengroove.org/metaview/metaview"
	xmlns:a="http://www.opengroove.org/metaview/autobus-connector" xmlns:t="http://www.opengroove.org/metaview/tabs"
	xmlns:x="http://www.opengroove.org/metaview/xcopy" xmlns:b="http://www.opengroove.org/metaview/borderpanel"
	xmlns:m="http://www.opengroove.org/metaview/models">
	<models>
		<a:object m:name="timers" a:interface="timer" a:object="timers" />
		<a:object m:name="startup" a:interface="timer" a:object="startup" />
		<map m:name="realtimes">
			<for key="number" value="timer" in="%timers%" identifier="%number%">
				<entry>
					<value from="%number%" />
					<value
						from="{switch|%timer.state%|1|{-|%startup%|%timer.time%}|2|{-|%timer.time%|%startup%}|3|%timer.time%}" />
				</entry>
			</for>
		</map>
		<map m:name="displaytimes">
			<for key="number" value="time" in="%realtimes%" identifier="%number%">
				<value from="%number%" />
				<list>
					<value from="{2pad0|{extrange|%time%|1|60}}" />
					<value from="{2pad0|{extrange|%time%|60|60}}" />
					<value from="{2pad0|{//|%time%|3600}}" />
				</list>
			</for>
		</map>
	</models>
	<view>
		<t:tabs>
			<for key="number" value1="timer" value2="display"
				in="{zipvalues|%timers%|%displaytimes%}" identifier="%number%">
				<box t:title="Timer %number%: %display.0%:%display.1%:%display.2%"
					direction="horizontal">
					<label
						text="TODO: finish this up. Timer's time is %display.0%:%display.1%:%display.2%" />
				</box>
			</for>
		</t:tabs>
	</view>
</metaview>











































