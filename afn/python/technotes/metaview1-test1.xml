
	<!--
		This file is a mockup of the current TrayTimer interface. It's written
		against the current interface provided by the timer server. Assuming
		some means of instructing a viewer to load an xml document and run it
		against a specific Autobus server, this xml file by itself would be
		sufficient to view, edit, etc the timers on a timer server and
		generally provide the same functionality as the java TrayTimer does.
	-->
<metaview xmlns="http://www.opengroove.org/metaview/metaview"
	xmlns:a="http://www.opengroove.org/metaview/autobus-connector" xmlns:t="http://www.opengroove.org/metaview/tabs"
	xmlns:x="http://www.opengroove.org/metaview/xcopy" xmlns:b="http://www.opengroove.org/metaview/borderpanel">
	<models>
		<model name="timers">
			<a:object interface="timer" object="timers" />
		</model>
		<model name="startup">
			<a:object interface="timer" object="startup" />
		</model>
		<model name="realtimes">
			<map>
				<for var="timer" in="timers">
					<entry>
						<value from="timer" />
						<subtract>
							<ifvalue value="timer.state" if1="1" then1="startup" if2="2"
								then2="timer.time" if3="3" then3="timer.time" />
							<ifvalue value="timer.state" if1="1" then1="timer.time"
								if2="2" then2="startup" if3="3" then3="0" />
						</subtract>
					</entry>
				</for>
			</map>
		</model>
	</models>
	<view>
		<t:tabs>
			<for var="timer" in="timers">
				<box t:title="timer" direction="horizontal">
					<label text="'TODO: put timer controls here'" />
				</box>
			</for>
		</t:tabs>
	</view>
</metaview>











































